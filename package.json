{
  "name": "@boilerz/action-release",
  "version": "1.2.16",
  "main": "src/main.ts",
  "repository": "git@github.com:boilerz/action-release.git",
  "author": "boilerz",
  "description": "Github action for version, release and publish packages",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "clean": "rm -rf dist && rm -rf lib",
    "build": "yarn clean && tsc && ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "codecov": "codecov",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@boilerz/build-tools": "^1.5.112",
    "@boilerz/eslint-config": "^2.0.38",
    "@boilerz/jest-config": "^1.0.30",
    "@boilerz/prettier-config": "^1.0.4",
    "@boilerz/tsconfig": "^1.4.18",
    "@boilerz/tsconfig-production": "^1.4.18",
    "@octokit/openapi-types": "^12.0.0",
    "@types/jest": "^28.1.8",
    "@vercel/ncc": "^0.27.0",
    "codecov": "^3.8.3",
    "eslint": "^7.32.0",
    "husky": "^8.0.3",
    "jest": "^28.1.3",
    "mockdate": "^3.0.5",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1"
  },
  "resolutions": {
    "node-notifier": "^9.0.0"
  },
  "pre-commit": {
    "run": "clean, build, package"
  }
}
