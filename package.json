{
  "name": "@boilerz/action-release",
  "version": "1.0.1",
  "main": "src/main.ts",
  "repository": "git@github.com:boilerz/action-release.git",
  "author": "boilerz",
  "description": "Github action for version, release and publish packages",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist && rm -rf lib",
    "build": "yarn clean && tsc && ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "codecov": "codecov",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@boilerz/build-tools": "^1.4.1",
    "@boilerz/eslint-config": "^2.0.1",
    "@boilerz/prettier-config": "^1.0.0",
    "@boilerz/tsconfig": "^1.3.0",
    "@types/jest": "^26.0.20",
    "@vercel/ncc": "^0.27.0",
    "codecov": "^3.8.1",
    "eslint": "^7.18.0",
    "husky": "^5.0.7",
    "jest": "^26.6.3",
    "mockdate": "^3.0.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0"
  },
  "resolutions": {
    "node-notifier": "^9.0.0"
  },
  "pre-commit": {
    "run": "clean, build, package"
  }
}
